{
  "name": "talent-cli",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "bin": {
    "talent-cli": "./src/index.ts"
  },
  "files": [
    "src",
    "skills"
  ],
  "exports": {
    ".": "./src/lib.ts",
    "./cli": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "prepare": "husky",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "bunx tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "version:packages": "changeset version"
  },
  "lint-staged": {
    "src/**/*.ts": "prettier --write"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.36",
    "@ai-sdk/devtools": "^0.0.8",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentui/core": "latest",
    "ai": "^6.0.50",
    "nanoid": "^5.1.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "bun-types": "^1.3.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  }
}
